<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    >


    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        style="@style/circle_profile_pic"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/comment_profile_pic"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jyrki Sukula"
        android:textColor="@android:color/black"
        android:textSize="25sp"
        app:layout_constraintLeft_toRightOf="@+id/comment_profile_pic"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:id="@+id/commenter_user_name"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingLeft="70dp"
        android:paddingTop="35dp"
        android:paddingRight="25dp"
        android:text="Commment"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/comment_message"
        android:background="@drawable/title_circe"
        android:translationZ="-1dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="timestamp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textSize="15dp"
        android:id="@+id/comment_time_stamp"
        />


</android.support.constraint.ConstraintLayout>