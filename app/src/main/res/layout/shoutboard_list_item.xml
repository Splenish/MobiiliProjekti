<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:longClickable="true"
    android:paddingBottom="20dp"
    >

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/profile_pic"
        android:src="@drawable/ainsley"
        app:layout_constraintBottom_toTopOf="@+id/post_pic"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jyrki Sukula"
        android:textColor="@android:color/black"
        android:id="@+id/poster"
        android:textSize="25sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintLeft_toRightOf="@+id/profile_pic"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintVertical_bias="0.2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_stamp"
        android:textSize="20sp"
        android:text="1.1.2000"
        android:paddingRight="10dp"
        app:layout_constraintTop_toBottomOf="@+id/poster"
        app:layout_constraintLeft_toRightOf="@+id/profile_pic"
        />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="234dp"
        app:layout_constraintTop_toBottomOf="@+id/time_stamp"
        android:src="@drawable/babayetu"
        android:id="@+id/post_pic"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/like_icon"
        app:layout_constraintTop_toBottomOf="@+id/post_pic"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/like_icon"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/like_icon"
        android:text="XX Likes"
        app:layout_constraintTop_toBottomOf="@+id/post_pic"
        android:id="@+id/number_of_likes"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/comment_icon"
        android:paddingLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/post_pic"
        app:layout_constraintLeft_toRightOf="@id/number_of_likes"
        android:id="@+id/comment_icon"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/number_of_comments"
        app:layout_constraintLeft_toRightOf="@id/comment_icon"
        app:layout_constraintTop_toBottomOf="@id/post_pic"
        android:text="XX Comments"
        />

    <View
        app:layout_constraintTop_toBottomOf="@id/comment_icon"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:id="@+id/description_divider"
        />

    <TextView
        android:textSize="20sp"
        android:id="@+id/post_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/description_divider"
        android:text="Löydetty äkäinen valkoinen slobodan. Nousi seisomaan ja huusi en ole sotarikollinen ja joi syanidia."

        />










</android.support.constraint.ConstraintLayout>