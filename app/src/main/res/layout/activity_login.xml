<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="#13070C"
    >


    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_catcube_logo_oikee"
        android:layout_marginTop="40dp"
        android:id="@+id/login_logo"
        />

    <TextView
        android:textColor="#50FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_logo"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:text="Email"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:id="@+id/email_textView"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/email_textView"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:maxLines="1"
        android:id="@+id/email_field"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:backgroundTint="#ffffff"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp"
        android:text="Password"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/email_field"
        android:id="@+id/password_text_view"
        android:textColor="#50FFFFFF"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/password_text_view"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:maxLines="1"
        android:id="@+id/password_field"
        android:textSize="20sp"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:backgroundTint="#ffffff"
        />

    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/password_field"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Login"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:id="@+id/login_button"
        android:background="#C8BDBD"
        android:textAllCaps="false"
        android:gravity="center_vertical"
        android:paddingLeft="20dp"
        android:textColor="@color/colorAccent"
        />
    <TextView
        android:textColor="#757575"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Don't have an account? "
        android:id="@+id/register_prompt"
        android:layout_marginTop="10dp"
        />
    <Button
        android:layout_marginTop="10dp"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Register"
        app:layout_constraintLeft_toRightOf="@id/register_prompt"
        app:layout_constraintTop_toBottomOf="@id/login_button"
        android:background="#13070C"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:id="@+id/to_registration_button"
        />








</android.support.constraint.ConstraintLayout>